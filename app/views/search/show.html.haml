:ruby
  keywords = list_keywords(@search.csv_file)
.row.d-flex.justify-content-center.py-5
  .col-12.col-md-8
    .card
      .card-body
        .card-title.mb-3
          .row.d-flex.justify-content-between.align-items-center
            .col-auto
              %h5.text-secondary Here's your keywords
            .col-auto
              %h5.text-secondary Total
              .ms-3=  keywords.count
        %table.table.text-center
          %caption List of Keywords
          %thead
            %tr
              %th{ scope: 'col' } #
              %th{ scope: 'col' } Keyword
              %th{ scope: 'col' } Actions
          %tbody
            - keywords.each_with_index do |keyword, index|
              %tr
                %th{ scope: 'row' } #{index +1}.
                %td{ scope: 'row' }= keyword
                = simple_form_for(@keyword, url: keywords_path) do |f|
                  = f.input :name, input_html: { value: keyword }, as: :hidden
                  %td{ scope: 'row' }= f.submit 'Search & Report', class: 'btn btn-primary text-light'



.card
  .card-body
    .row
      .row.mb-3.d-flex.justify-content-between
        .col-auto
          %h5 Log In
        .col-auto.fs--1.text-600
          %span or
          %span
            = link_to "Create an Account",
                      new_registration_path(resource_name)
      = simple_form_for resource,
                        url: session_path(resource_name),
                        data: { turbo: false } do |f|
        .form-group.mb-3
          = f.input :email,
                    autofocus: true,
                    label: false,
                    placeholder: 'Email',
                    autocomplete: "email",
                    autofocus: true,
                    class: 'form-control'
        .form-group.mb-3
          = f.input :password,
                    label: false,
                    placeholder: 'Password',
                    autocomplete: "current-password",
                    class: 'form-control'
          - if devise_mapping.rememberable?
            .row
              .d-flex.justify-content-between
                .col-auto
                  = f.check_box :remember_me
                  = f.label :remember_me
                .col-auto
                  = render "devise/shared/links"
          .actions
            = f.submit "Log in", class: 'btn btn-primary d-block w-100 mt-3'
